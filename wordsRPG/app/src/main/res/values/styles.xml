<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customTextViewFontStyle</item>
        <item name="android:editTextStyle">@style/customTextViewFontStyle</item>
        <item name="android:radioButtonStyle">@style/customTextViewFontStyle</item>
        <item name="android:checkboxStyle">@style/customTextViewFontStyle</item>

    </style>


    <style name="myCustomAddWordDialog_bg" parent="android:Theme" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">#82000000</item>
    </style>

    <!-- 메인 화면  bottom 네비게이션 뷰 스타일
         현재는 글씨 확대 이슈 해결 위한  textsize만 지정 -->
    <style name="bottom_nav_menu_theme">
        <item name="android:textSize">10sp</item>
    </style>

    <!-- material design chip 형태의 '태그' 뷰 style     -->
    <style name="tag_view_style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="closeIconVisible">true</item>
        <item name="chipBackgroundColor">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="library_basic_package_tab_style" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="rippleColor">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabBackground">@drawable/basic_package_change_click</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
        <item name="tabTextColor">@color/colorBrownForAppMain</item>
        <item name="tabTextAppearance">@style/library_main_tab_text_style</item>
        <item name="tabPaddingEnd">-1dp</item>
        <item name="tabPaddingStart">-1dp</item>
    </style>

    <!-- 라이브러리쪽  메인 tab layout  style -->
    <!-- https://stackoverflow.com/questions/36399013/how-to-make-tablayout-text-size-equal/42145071 1번째 답변 padding start, end -1dp 설정-->
    <style name="library_main_tab_style" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/colorLightBlue</item>
        <item name="tabIndicator">@drawable/tab_selector</item>
        <item name="tabTextAppearance">@style/library_main_tab_text_style</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingBottom">-15dp</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabSelectedTextColor">@color/colorBrownForAppMain</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorColor">@color/colorBrownForAppMain</item>
        <item name="tabPaddingStart">-1dp</item>
        <item name="tabPaddingEnd">-1dp</item>
    </style>

    <style name="library_main_tab_text_style" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/binggraemelonabold</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_custom_mypackage_add_bg</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>

