<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_certificationNumberSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="인증번호 \n보내기"
            app:layout_constraintBottom_toBottomOf="@+id/et_emailNumberSend"
            app:layout_constraintStart_toEndOf="@+id/et_emailNumberSend"
            app:layout_constraintTop_toTopOf="@+id/et_emailNumberSend" />

        <EditText
            android:id="@+id/et_certificationNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:visibility="gone"
            android:hint="인증번호를 적어주세요"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_emailNumberSend" />

        <Button
            android:id="@+id/btn_certificationNumberCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인증번호 \n확인"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/et_certificationNumber"
            app:layout_constraintStart_toStartOf="@+id/btn_certificationNumberSend"
            app:layout_constraintTop_toTopOf="@+id/et_certificationNumber" />

        <EditText
            android:id="@+id/et_emailNumberSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="인증번호를 받을 이메일을 입력해주세요"
            android:inputType="textPersonName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>