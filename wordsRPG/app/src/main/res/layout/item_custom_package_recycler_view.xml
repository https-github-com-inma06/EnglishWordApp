<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.uhavecodingproblem.wordsrpg.data.CustomPackageData" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/container_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_package_thumbnail"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:image="@{data.profileImageUrl}"
        app:error="@{@drawable/on_my_room}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_name"
        />
   <TextView
       android:id="@+id/tv_package_name"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:text="@{data.packageName}"
       app:layout_constraintTop_toBottomOf="@id/img_package_thumbnail"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_package_like_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@{@string/str_liked_count(data.likeCount)}"
        app:layout_constraintTop_toBottomOf="@id/tv_package_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />
    
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>