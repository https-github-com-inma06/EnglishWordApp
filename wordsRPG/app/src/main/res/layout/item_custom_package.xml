<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="data"
            type="com.uhavecodingproblem.wordsrpg.data.model.CustomPackageData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_custom_package"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="5dp"
        android:background="@drawable/recyclerview_item_round">

        <ImageView
            android:id="@+id/img_custom_package_thumbnail"
            app:image="@{data.profileImageUrl}"
            app:error="@{@drawable/on_my_room}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/package_thumbnail" />

        <TextView
            android:id="@+id/tv_custom_package_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/package_thumbnail_title"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="@{data.packageName}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/tv_custom_package_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:progressDrawable="@drawable/basic_package_progressbar"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintTop_toBottomOf="@id/tv_custom_package_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.05" />

        <TextView
            android:id="@+id/tv_custom_package_owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_package_item_tv_round"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textSize="8sp"
            tools:ignore="RtlSymmetry,SmallSp"
            android:textColor="@color/white"
            android:fontFamily="@font/binggraemelonabold"
            android:layout_marginBottom="2dp"
            android:text="@{'['+data.ownerName+']'}"
            app:layout_constraintBottom_toTopOf="@+id/tv_custom_package_name"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>