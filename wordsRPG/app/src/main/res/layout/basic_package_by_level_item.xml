<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="data"
            type="com.uhavecodingproblem.wordsrpg.data.WordType" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/basic_package_layout"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_margin="8dp"
        android:background="@drawable/recyclerview_item_round">

        <ImageView
            android:id="@+id/img_by_level_package_thumbnail"
            error="@{@drawable/ic_launcher_background}"
            image="@{data.thumbnailImage}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/package_thumbnail" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_package_title_writer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/package_thumbnail_title"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_package_title"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@{data.name}"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_writer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/package_writer"
                android:gravity="end|center_vertical"
                android:padding="5dp"
                android:text="@{@string/package_writer(data.writer)}"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintHeight_percent="0.4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_package_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_package_progress"
            progress="@{data.words}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/package_thumbnail_progress"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>