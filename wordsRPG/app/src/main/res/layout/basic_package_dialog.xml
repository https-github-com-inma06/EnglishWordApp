<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="information"
            type="com.uhavecodingproblem.wordsrpg.data.WordType" />

        <variable
            name="customdialog"
            type="com.uhavecodingproblem.wordsrpg.dialog.PackageDialog" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/package_dialog_round">

        <ImageView
            android:id="@+id/iv_package_thumbnail_image"
            error="@{@drawable/ic_launcher_background}"
            image="@{information.thumbnailImage}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/package_thumbnail" />

        <Space
            android:id="@+id/top_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_package_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#4D000000"
            android:text="@{information.name}"
            android:paddingTop="15dp"
            android:gravity="center"
            android:textSize="31sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            app:layout_constraintHeight_percent="0.45"
            app:layout_constraintTop_toBottomOf="@id/top_space" />

        <Button
            android:id="@+id/btn_move_study"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/package_dialog_button_round"
            android:gravity="center"
            android:onClick="@{customdialog::moveStudy}"
            android:text="@string/move_study"
            android:textColor="@color/colorWhite"
            android:textScaleX="1.2"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_package_name"
            app:layout_constraintWidth_percent="0.55" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>