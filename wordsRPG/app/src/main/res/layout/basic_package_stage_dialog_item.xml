<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="int" />

        <variable
            name="endposition"
            type="int" />

        <variable
            name="morestage"
            type="String" />

        <variable
            name="stageinformation"
            type="com.uhavecodingproblem.wordsrpg.data.Stage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dialog_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/basic_package_dialog_item_round">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_stage_collapse"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_stage_collapse_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@{position == endposition? morestage : @string/stage(stageinformation.stageNum)}"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent="0.85" />

            <ImageButton
                android:id="@+id/img_btn_stage_collapse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:contentDescription="@string/expand_and_collapse"
                android:scaleType="fitCenter"
                android:src="@drawable/img_vector_block_arrow_drop_down"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintWidth_percent="0.15" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_stage_expand"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_stage_expand_name"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@{@string/stage(stageinformation.stageNum)}"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.45" />

            <RatingBar
                android:id="@+id/rating_bar_result"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="3"
                android:rating="@{stageinformation.stageBadgeCount}"
                android:stepSize="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/tv_stage_expand_name"
                app:layout_constraintTop_toBottomOf="@id/tv_stage_expand_name" />

            <TextView
                android:id="@+id/tv_stage_expand_description"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_stage_expand_name" />

            <Button
                android:id="@+id/btn_move_selection_window_dialog"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/basic_package_dialog_item_button_round"
                android:gravity="center"
                android:text="@string/move_study_dialog"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.8"
                app:layout_constraintRight_toLeftOf="@id/img_btn_stage_expand"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <ImageButton
                android:id="@+id/img_btn_stage_expand"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:background="@null"
                android:contentDescription="@string/expand_and_collapse"
                android:scaleType="fitCenter"
                android:src="@drawable/img_vector_block_arrow_drop_up"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.15" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

