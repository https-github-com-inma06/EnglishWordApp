<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="word"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="10dp"
            android:gravity="center"
            android:textSize="30sp"
            android:text="@{word}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/radio_group_answer"
            app:layout_constraintHeight_percent="0.2" />


        <RadioGroup
            android:id="@+id/radio_group_answer"
            app:layout_constraintTop_toBottomOf="@id/tv_question"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintHeight_percent="0.6" >

            <RadioButton
                android:id="@+id/radio_btn_answer_num_one"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="1번"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radio_btn_answer_num_two"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="2번"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radio_btn_answer_num_three"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="3번"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radio_btn_answer_num_four"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="4번"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radio_btn_answer_num_five"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="5번"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_weight="1"/>

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
