<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="word"
            type="com.uhavecodingproblem.wordsrpg.data.model.ResponseBasicPackage.Word" />

        <variable
            name="wordarray"
            type="android.util.SparseBooleanArray" />

        <variable
            name="meanarray"
            type="android.util.SparseBooleanArray" />

        <variable
            name="position"
            type="int" />

        <variable
            name="maxsize"
            type="int" />

        <variable
            name="button"
            type="View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/word_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="32sp"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_word"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintHeight_percent="0.7"
            app:layout_constraintTop_toBottomOf="@id/word_count"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/basic_dialog_text_color"
                    android:gravity="center"
                    android:text="@{wordarray.get(position)? null : word.word}"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:textSize="52sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHeight_percent="0.5"/>

                <TextView
                    android:id="@+id/tv_mean"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/colorLightBlue2"
                    android:gravity="center"
                    android:text="@{meanarray.get(position)? null : word.mean}"
                    android:textColor="@color/black"
                    android:textSize="52sp"
                    android:textStyle="bold"
                    app:layout_constraintHeight_percent="0.3"
                    app:layout_constraintTop_toBottomOf="@id/tv_word" />

                <ImageView
                    android:id="@+id/iv_word_mic_slow"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@string/study_mic"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_mic_24"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_word_mic"
                    app:layout_constraintEnd_toStartOf="@+id/iv_word_mic"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintWidth_percent="0.1" />

                <ImageView
                    android:id="@+id/iv_word_mic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_baseline_mic_24"
                    android:scaleType="fitCenter"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintWidth_percent="0.1"
                    app:layout_constraintRight_toRightOf="@id/tv_word"
                    app:layout_constraintBottom_toBottomOf="@id/tv_word"
                    android:contentDescription="@string/study_mic"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@color/basic_dialog_text_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_mean"
                    app:layout_constraintHeight_percent="0.2">

                    <TextView
                        android:id="@+id/tv_example"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:paddingStart="15dp"
                        android:gravity="center_vertical"
                        android:text="@{word.wordExample}"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/imv_video_play"/>

                    <ImageView
                        android:id="@+id/imv_video_play"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        android:src="@drawable/img_vector_block_video_play"
                        android:scaleType="fitCenter"
                        app:layout_constraintHeight_percent="0.5"
                        app:layout_constraintWidth_percent="0.1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/basic_package_dialog_item_button_round"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="@string/previous"
            android:gravity="center"
            android:visibility="@{position == 0 ? button.INVISIBLE : button.VISIBLE}"
            app:layout_constraintLeft_toLeftOf="@id/card_view_word"
            app:layout_constraintTop_toBottomOf="@id/card_view_word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.1"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/basic_package_dialog_item_button_round"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="@{position == maxsize ? @string/test : @string/next}"
            android:gravity="center"
            app:layout_constraintRight_toRightOf="@id/card_view_word"
            app:layout_constraintTop_toBottomOf="@id/card_view_word"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintHeight_percent="0.1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>