<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="data"
            type="com.uhavecodingproblem.wordsrpg.data.WordData" />

        <variable
            name="wordarray"
            type="android.util.SparseBooleanArray" />

        <variable
            name="meanarray"
            type="android.util.SparseBooleanArray" />

        <variable
            name="position"
            type="int" />

        <variable
            name="maxsize"
            type="int" />

        <variable
            name="button"
            type="View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/word_count"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toTopOf="parent" />

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/word_youtube"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@id/word_count"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>


        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@{wordarray.get(position)? null : data.word}"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            app:layout_constraintHeight_percent="0.2"
            app:layout_constraintTop_toBottomOf="@+id/word_youtube" />

        <TextView
            android:id="@+id/mean"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="@{meanarray.get(position)? null : data.mean}"
            android:textStyle="bold"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/word" />
        
        <ImageView
            android:id="@+id/word_mic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@drawable/ic_baseline_mic_24"
            android:scaleType="fitCenter"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintTop_toBottomOf="@id/mean"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/study_mic"/>

        <View
            android:id="@+id/btn_center_space"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintTop_toBottomOf="@id/word_mic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="이전"
            android:gravity="center"
            android:visibility="@{position == 0 ? button.INVISIBLE : button.VISIBLE}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_center_space"
            app:layout_constraintTop_toBottomOf="@id/word_mic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="다음"
            android:gravity="center"
            android:visibility="@{position >= maxsize ? button.INVISIBLE : button.VISIBLE}"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/word_mic"
            app:layout_constraintLeft_toRightOf="@id/btn_center_space"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_percent="0.2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>