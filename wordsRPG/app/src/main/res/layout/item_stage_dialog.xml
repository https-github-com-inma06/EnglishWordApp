<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="lock"
            type="String" />

        <variable
            name="stage"
            type="com.uhavecodingproblem.wordsrpg.data.model.ResponseBasicPackage.Stage" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_dialog_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/basic_package_dialog_item_round">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_stage_collapse"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            stageBackGroundColorLockCheck="@{stage.stageLockStatus}"
            stageBackGroundColorTestCheck="@{stage.stageTestStatus}"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_stage_collapse_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="@{stage.stageLockStatus.equalsIgnoreCase(`lock`)? lock : @string/stage(stage.stageID)}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintWidth_percent="0.9" />


            <ImageButton
                android:id="@+id/img_btn_stage_collapse"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="@string/expand_and_collapse"
                android:scaleType="fitCenter"
                android:src="@{stage.stageLockStatus.equalsIgnoreCase(`lock`)? @drawable/img_vector_white_lock : @drawable/img_vector_block_arrow_drop_down}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_stage_expand"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:visibility="gone"
            stageBackGroundColorLockCheck="@{stage.stageLockStatus}"
            stageBackGroundColorTestCheck="@{stage.stageTestStatus}"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_stage_expand_name"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="@{@string/stage(stage.stageID)}"
                android:textStyle="bold"
                app:autoSizeMaxTextSize="1000sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />


            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="start|center_vertical"
                android:paddingStart="10dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_move_selection_window_dialog"
                app:layout_constraintTop_toBottomOf="@id/tv_stage_expand_name" />


            <TextView
                android:id="@+id/tv_stage_expand_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_move_selection_window_dialog"
                app:layout_constraintTop_toBottomOf="@id/tv_stage_expand_name" />

            <Button
                android:id="@+id/btn_move_selection_window_dialog"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:background="@drawable/basic_package_dialog_item_button_round"
                android:gravity="center"
                android:text="@string/move_study_dialog"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.7"
                app:layout_constraintRight_toLeftOf="@id/img_btn_stage_expand"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/img_btn_stage_expand"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@null"
                android:contentDescription="@string/expand_and_collapse"
                android:scaleType="fitCenter"
                android:src="@drawable/img_vector_block_arrow_drop_up"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

