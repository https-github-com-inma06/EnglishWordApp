<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uhavecodingproblem.wordsrpg">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.Application"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.library.StudyActivity" />
        <activity android:name=".ui.fragment.battle.BattleUserListActivity" />
        <activity android:name=".ui.fragment.battle.BattlePlayActivity" />
        <activity android:name=".ui.fragment.battle.BattleReadyActivity" />
        <activity
            android:name=".ui.activity.library.MainActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.library.NotificationActivity" />
        <activity android:name=".ui.activity.library.WrongAnswerActivity" />
        <activity android:name=".ui.activity.library.SettingActivity" />
        <activity android:name=".ui.activity.library.AddNewCustomPackageActivity" />
    </application>

</manifest>